<odoo>

    <record id="clv_person_lab_test_request_setup_view_form" model="ir.ui.view">
        <field name="name">clv.person.lab_test.request.setup.form</field>
        <field name="model">clv.person.lab_test.request.setup</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_right">
                </div>
                <label for="person_ids"/>
                <field name="person_ids"/>
                <label for="lab_test_type_ids"/>
                <field name="lab_test_type_ids" options="{'no_open': False, 'no_create': True}" context="{'search_default_phase_id': phase_id}"/>
                <group>
                    <group>
                        <field name="phase_id" options="{'no_open': False, 'no_create': True}"/>
                    </group>
                </group>
                <footer>
                    <button 
                        type="object"
                        name="do_person_lab_test_request_setup"
                        string="Lab Test Request Set Up"
                        class="oe_highlight"
                        />
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>

        </field>
    </record>

    <!-- More button Action -->
    <act_window 
        id="clv_person_lab_test_request_setup_action"
        name="Lab Test Request Set Up [Person]"
        src_model="clv.person"
        res_model="clv.person.lab_test.request.setup"
        view_mode="form"
        key2="client_action_multi"
        target="new"
    />

</odoo>
