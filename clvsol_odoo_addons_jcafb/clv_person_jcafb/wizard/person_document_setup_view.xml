<odoo>

    <record id="clv_person_document_setup_view_form" model="ir.ui.view">
        <field name="name">clv.person.document_setup.form</field>
        <field name="model">clv.person.document_setup</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_right">
                </div>
                <label for="person_ids"/>
                <field name="person_ids" options="{'no_open': False, 'no_create': True}"/>
                <label for="document_type_ids"/>
                <field name="document_type_ids" options="{'no_open': False, 'no_create': True}" context="{'search_default_phase_id': phase_id}"/>
                <group>
                    <group>
                        <field name="category_id" options="{'no_open': False, 'no_create': True}"/>
                        <field name="date_foreseen"/>
                        <field name="date_deadline"/>
                        <field name="phase_id" options="{'no_open': False, 'no_create': True}"/>
                    </group>
                </group>
                <footer>
                    <button 
                        type="object"
                        name="do_person_document_setup"
                        string="Document Set Up"
                        class="oe_highlight"
                        />
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>

        </field>
    </record>

    <!-- More button Action -->
    <act_window 
        id="clv_person_document_setup_action"
        name="Document Set Up [Person]"
        src_model="clv.person"
        res_model="clv.person.document_setup"
        view_mode="form"
        key2="client_action_multi"
        target="new"
    />

</odoo>
