<odoo>

    <record id="clv_lab_test_crystal_view_form" model="ir.ui.view">
        <field name="name">clv.lab_test.crystal.form</field>
        <field name="model">clv.lab_test.crystal</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div name="button_box" class="oe_right oe_button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" groups="clv_base.group_reguser">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div name="title" class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" default_focus="1" placeholder="Crystal..."/></h1>
                        <label for="code" class="oe_edit_only"/>
                        <h2><field name="code" placeholder="Species Code..."/></h2>
                    </div>
                    <field name="notes" placeholder="Notes..." colspan="4"/>
                    <notebook>
                        <page name="settings" string="Settings" groups="clv_base.group_reguser" invisible="True">
                            <group name="settings">
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="clv_lab_test_crystal_view_tree" model="ir.ui.view">
        <field name="name">clv.lab_test.crystal.tree</field>
        <field name="model">clv.lab_test.crystal</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>
    
    <record id="clv_lab_test_crystal_view_search" model="ir.ui.view">
        <field name="name">clv.lab_test.crystal.search</field>
        <field name="model">clv.lab_test.crystal</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="notes"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <group expand="0" string="Group By...">
                </group>
            </search>
        </field>
    </record>

    <record id="clv_lab_test_crystal_action" model="ir.actions.act_window">
        <field name="name">Lab Test Crystals</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clv.lab_test.crystal</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="clv_lab_test_crystal_view_search"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="view_id" eval="False"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to add a new crystal.
          </p>
        </field>
    </record>
        
</odoo>
