<odoo>

    <record id="clv_mfile_unarchive_view_form" model="ir.ui.view">
        <field name="name">clv.mfile.unarchive.form</field>
        <field name="model">clv.mfile.unarchive</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_right">
                </div>
                <label for="mfile_ids"/>
                <field name="mfile_ids"/>
                <group>
                    <field name="archive_directory_id" options="{'no_open': False, 'no_create': True}"/>
                    <field name="directory_id" options="{'no_open': False, 'no_create': True}"/>
                </group>
                <footer>
                    <button 
                        type="object"
                        name="do_mfile_unarchive"
                        string="Media Files Unarchive"
                        class="oe_highlight"
                        />
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>

        </field>
    </record>

    <!-- More button Action -->
    <act_window 
        id="clv_mfile_unarchive_action"
        name="Media File Unarchive"
        src_model="clv.mfile"
        res_model="clv.mfile.unarchive"
        view_mode="form"
        key2="client_action_multi"
        target="new"
    />

</odoo>
