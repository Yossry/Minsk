<odoo>

    <record id="clv_global_settings_view_form_filestore_survey_files" model="ir.ui.view">
        <field name="name">clv.global_settings.form</field>
        <field name="model">clv.global_settings</field>
        <field name="inherit_id" ref="clv_base.clv_global_settings_view_form_filestore"/>
        <field name="priority" eval="10" />
        <field name="arch" type="xml">
            <header name="global_settings_header" position="after">
                <group name="mfile" string="Media File">
                    <group name="survey_files">
                        <field name="survey_files_directory_archive"/>
                        <field name="current_survey_files_directory_archive" invisible="True"/>
                        <field name="survey_files_directory_input"/>
                        <field name="current_survey_files_directory_input" invisible="True"/>
                        <field name="survey_files_directory_templates"/>
                        <field name="current_survey_files_directory_templates" invisible="True"/>
                    </group>
                </group>
            </header>
        </field>
    </record>
       
</odoo>
