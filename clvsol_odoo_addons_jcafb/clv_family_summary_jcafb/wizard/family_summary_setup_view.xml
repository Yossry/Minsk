<odoo>

    <record id="clv_family_summary_setup_view_form" model="ir.ui.view">
        <field name="name">clv.family.summary_setup.form</field>
        <field name="model">clv.family.summary_setup</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_right">
                    <button type="object" name="do_populate_all_familyes" string="Get All Families"/>
                </div>
                <label for="family_ids"/>
                <field name="family_ids"/>
                <group>
                    <field name="dir_path"/>
                    <field name="file_name"/>
                </group>
                <footer>
                    <button 
                        type="object"
                        name="do_family_summary_setup"
                        string="Families Summary Set Up"
                        class="oe_highlight"
                        />
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>

        </field>
    </record>

    <!-- More button Action -->
    <act_window 
        id="clv_family_summary_setup_action"
        name="Family Summary Set Up"
        src_model="clv.family"
        res_model="clv.family.summary_setup"
        view_mode="form"
        key2="client_action_multi"
        target="new"
    />

</odoo>
