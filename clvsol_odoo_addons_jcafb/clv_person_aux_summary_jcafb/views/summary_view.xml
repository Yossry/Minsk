<odoo>
        
    <record id="clv_person_aux_view_form_summary" model="ir.ui.view">
        <field name="name">clv.person_aux.form</field>
        <field name="model">clv.person_aux</field>
        <field name="inherit_id" ref="clv_person_aux.clv_person_aux_view_form"/>
        <field name="priority" eval="6"/>
        <field name="arch" type="xml">
            <group name="group_top" position="before">
                <group>
                    <group>
                        <field name="summary_id" options='{"no_open": False, "no_create": True}'/>
                        <field name="date_summary"/>
                    </group>
                    <group>
                        <field name="file_name" invisible="1"/>
                        <field name="file_content" filename="file_name"/>
                        <field name="stored_file_name" invisible="1"/>
                        <field name="directory_id" options="{'no_open': False, 'no_create': True}" invisible="1"/>
                    </group>
                </group>
            </group>
        </field>
    </record>

    <record id="clv_person_aux_view_tree_summary" model="ir.ui.view">
        <field name="name">clv.person_aux.tree</field>
        <field name="model">clv.person_aux</field>
        <field name="inherit_id" ref="clv_person_aux.clv_person_aux_view_tree"/>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <field name="category_ids" position="after">
                <field name="file_name" invisible="1"/>
                <field name="file_content" filename="file_name" widget="binary"/>
                <field name="stored_file_name" invisible="1"/>
                <field name="directory_id" invisible="1"/>
            </field>
        </field>
    </record>

</odoo>
