                </footer>
            </form>

        </field>
    </record>

    <!-- More button Action -->
    <act_window 
        id="clv_person_aux_verification_exec_action"
        name="Person (Aux) Verification Execute"
        src_model="clv.person_aux"
        res_model="clv.person_aux.verification_exec"
        view_mode="form"
        key2="client_action_multi"
        target="new"
    />

</odoo>
