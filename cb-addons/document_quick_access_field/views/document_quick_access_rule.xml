<odoo>

    <record model="ir.ui.view" id="document_quick_access_rule_form_view">
        <field name="name">document.quick.access.rule.form (in document_quick_access_code)</field>
        <field name="model">document.quick.access.rule</field>
        <field name="inherit_id" ref="document_quick_access.document_quick_access_rule_form_view"/>
        <field name="arch" type="xml">
            <field name="barcode_format" position="after">
                <field name="field_name" attrs="{'invisible': [('barcode_format', '!=', 'field')], 'required': [('barcode_format', '=', 'field')]}"/>
                <field name="field_format" attrs="{'invisible': [('barcode_format', '!=', 'field')], 'required': [('barcode_format', '=', 'field')]}"/>
            </field>
        </field>
    </record>

</odoo>
