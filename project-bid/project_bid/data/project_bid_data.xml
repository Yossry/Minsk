            <field name="name">Bid Confirmed</field>
            <field name="default" eval="True"/>
            <field name="res_model">project.bid</field>
        </record>
        <record id="mt_bid_approved" model="mail.message.subtype">
            <field name="name">Bid Approved</field>
            <field name="default" eval="True"/>
            <field name="res_model">project.bid</field>
        </record>

        <record id="mt_bid_draft" model="mail.message.subtype">
            <field name="name">Bid Set to Draft</field>
            <field name="default" eval="True"/>
            <field name="res_model">project.bid</field>
        </record>

