<?xml version="1.0"?>
<odoo>
    <record id="create_amendment_wizard_view" model="ir.ui.view">
        <field name="name">Create Amendment Wizard</field>
        <field name="model">hr.contract.amendment.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="type_id"/>
                </group>
                <footer>
                    <button type="object"
                    name="create_amendment"
                    string="Create amendment"
                    class="oe_highlight"/>
                    <button special="cancel"
                    string="Cancel"
                    class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="create_amendment_wizard_view_action" model="ir.actions.act_window">
        <field name="name">Create Amendment Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.contract.amendment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
