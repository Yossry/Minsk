<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<record id="view_invoice_checked" model="ir.ui.view">
			<field name="name">invoice_checked</field>
			<field name="model">invoice.checked</field>
			<field name="arch" type="xml">
				<form string="Invoices Check">  
					<group>
						<field name="invoice_ids" colspan="4" nolabel="1"  domain="[('state', '=', 'draft')]">
							<tree  decoration-info="state =='draft'" decoration-success=" state in ('proforma','proforma2','open')" decoration-danger ="state =='checked'" decoration-warning ="state =='cancel'">									
								<field name="post_id"/>
								<field name="date_invoice"/>
								<field name="number"/>
								<field name="user_id" string="Generated By"/>
								<field name="amount_total"/>
								<field name="state"/>																
							</tree>
						</field>
					</group>
					<footer>
						<button string="Checked" name="invoice_checked" type="object" class="btn-primary"/>
						<label for="state" string="or"/>
						<button string="Cancel" class="btn-default" special="cancel"/>
					</footer>
			   </form>
			</field>
		</record>
		
		<act_window
            id="action_invoice_checked"
            name="Invoices Check"
            res_model="invoice.checked"
            src_model="account.invoice"
            view_mode="form"
            multi="False"
            target="new"
            key2="client_action_multi"
        />	
		
		
		<record id="view_invoice_approved" model="ir.ui.view">
			<field name="name">invoice_approved</field>
			<field name="model">invoice.approved</field>
			<field name="arch" type="xml">
				<form string="Invoices Approval">  
					<group>
						<field name="invoice_ids" colspan="4" nolabel="1"  domain="[('state', '=', 'checked')]">								
							<tree  decoration-info="state =='draft'" decoration-success=" state in ('proforma','proforma2','open')" decoration-danger ="state =='checked'" decoration-warning ="state =='cancel'">									
								<field name="post_id"/>
								<field name="date_invoice"/>
								<field name="number"/>
								<field name="user_id" string="Generated By"/>
								<field name="amount_total"/>
								<field name="state"/>								
							</tree>

						</field>
					</group>
					<footer>
						<button string="Approved" name="invoice_approved" type="object" class="btn-primary"  />
						<label for="state" string="or"/>
						<button string="Cancel" class="btn-default" special="cancel"/>
					</footer>
			   </form>
			</field>
		</record>
		
		<act_window
            id="action_invoice_approved"
            name="Invoices Approval"
            res_model="invoice.approved"
            src_model="account.invoice"
            view_mode="form"
            multi="False"
            target="new"
            key2="client_action_multi"
        />	
		
		
    </data>
</odoo>
