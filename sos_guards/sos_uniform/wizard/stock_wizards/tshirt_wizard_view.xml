<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>	   
		
		<record id="tshirt_wizard_view" model="ir.ui.view">
			<field name="name">T-Shirt Wizard</field>
			<field name="model">tshirt.wizard</field>                     
			<field name="arch" type="xml">
			<form string="T-Shirt Wizard">
			 	<group>
			 		<group>
						<field name="date_from" />
						<field name="date_to" />
					</group>
					<group>
					</group>	
				</group>
				<footer>
					<button name="print_report" string="Generate Report" type="object" default_focus="1" class="oe_highlight"/>
					<button string="Cancel" class="oe_link" special="cancel" />
				</footer> 	
			  </form>  
			</field>
		</record>
		
		
		<record id="action_tshirt_wizard" model="ir.actions.act_window">
            <field name="name">T-Shirt Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tshirt.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="tshirt_wizard_view"/>
            <field name="target">new</field>
        </record>
		
    </data>
</odoo>
