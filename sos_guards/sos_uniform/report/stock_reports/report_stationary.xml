<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>	
		<template id ="sos_uniform.report_stationary">
			<t t-call="web.html_container">
				<t t-call="web.external_layout" style="font-family:georgia,garamond,serif;font-size:10px">
					<div class="page">
						<style>
							 tr:nth-child(even) {background-color: #FFEBCD;}
							 tr:nth-child(odd) {background-color: #cdcdcd;}
						</style>
						
						<h4>Uniform Issuance Report</h4>
						<h5>
							From: <span t-esc="get_date_formate(data['date_from'])"/><br></br>
							To: <span t-esc="get_date_formate(data['date_to'])"/><br></br>
						</h5>
						
						<table class="table table-condensed" width="100%">
							<tr style="font-size:10px; font-weight:bold; background-color:#A6ACAF;">
								<td>SR#. </td>
								<td>Date </td>
								<td>Post </td>
								<td>Region </td>
								<td>Type </td>
								<td>Demand NO </td>
								<td>Small Envelopes </td>
								<td>A4 Envelopes </td>
								<td>Legal Envelopes </td>
								<td>Letter Head Pad Mux </td>
								<td>Letter Head Pad ISB </td>
								<td>Appointment Letter Pad </td>
								<td>File Covers </td>
								<td>Attendance Register </td>
								<td>Gate Pass IN and Out </td>
								<td>Guard Cards </td>
								<td>Weapon Cards </td>
								<td>Feedback Pad </td>
								<td>Recovery Book </td>
							</tr>
						</table>			
					</div>
				</t>		 
			</t>
		</template>
		
	</data>
</odoo>

